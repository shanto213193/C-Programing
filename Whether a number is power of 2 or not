#include<stdio.h>
int main()
{  
system("color 02");
    int n;
    printf("Enter any Number : ");
    scanf("%d",&n);
    if(n&& ((n&n-1) ==0))   /// Single and represents here relation between n and n-1. Acts like a truth table of AND operation

    {
        printf ("\n%d is power of 2\n",n) ;
    }
    else
    {
        printf("\n%d is not a power of 2\n",n);
    }


    getch();
    return 0;

}
